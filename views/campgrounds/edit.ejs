<%- include("../partials/header") %>

<div class="container">
	
	<div class="row" style="width: 70%; margin: auto; ">
		<div class="container" style="padding: 30px">
			<h2>Edit Campground</h2>
		</div>
		<form action="/campgrounds/<%= data._id %>?_method=PUT" method="POST" style="padding-left: 50px">
			<div class="form-group">
				<input class="form-control" type="text" name="name" value="<%= data.name %>"/>
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="image" value="<%= data.image %>"/>
			</div>
			<div>
				<textarea name="description" style="width: 400px; height: 200px"><%= data.description %></textarea>
			</div>
			<div style="padding: 20px">
				<button class="btn btn-primary">Submit!</button>
			</div>
		</form>
	</div>
</div>



<%- include("../partials/footer") %>